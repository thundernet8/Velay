{
    "defaultSeverity": "error",
    "extends": ["tslint-config-standard", "tslint-config-prettier"],
    "jsRules": {},
    "rules": {
        "prettier": [
            true,
            {
                "semi": false,
                "arrowParens": "always",
                "singleQuote": true,
                "trailingComma": "always",
                "printWidth": 120
            }
        ],
        "radix": false
    },
    "rulesDirectory": ["tslint-plugin-prettier"]
}
