{
    "defaultSeverity": "error",
    "extends": ["tslint-config-prettier", "tslint-config-standard"],
    "linterOptions": {
        "exclude": ["test/**", "src/lib/**", "src/types/**", "lib/**", "docs/**"]
    },
    "jsRules": {},
    "rules": {
        "prettier": [
            false,
            {
                "semi": true,
                "arrowParens": "always",
                "singleQuote": true,
                "trailingComma": "all",
                "printWidth": 120
            }
        ],
        "radix": false,
        "ter-indent": [true, 4],
        "semicolon": [true, "always"],
        "space-before-function-paren": false
    },
    "rulesDirectory": ["tslint-plugin-prettier"]
}
